{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"includes": ["src/**", "test/**", "package.json", "biome.json"]
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							[":BUN:", ":NODE:"],
							":BLANK_LINE:",
							[":PACKAGE:", "!@test/**", "cloudflare:test"],
							":BLANK_LINE:",
							[":ALIAS:", "@test/**", "!@/**"],
							":BLANK_LINE:",
							[":PATH:", "@/**"]
						]
					}
				}
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"semicolons": "always",
			"quoteStyle": "double",
			"indentWidth": 2,
			"indentStyle": "space",
			"trailingCommas": "all"
		},
		"linter": {
			"enabled": true
		}
	}
}
